@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-6">
        <h3>Website Crawler</h3>
        <h4>Helps find all pages and measure its loading time!</h4>
        <form action="Home/Crawl" method="post">
            <label class="label">Enter url: </label>
            <input type="url" name="url" value="" placeholder="http://www.example.com"/>
            <button type="submit" class="btn btn-primary">Go and find!</button>
        </form>
    </div>
</div>
